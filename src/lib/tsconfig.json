{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "mapRoot": "",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "outDir": "../../dist/lib",
    "inlineSources": true,
    "stripInternal": false,
    "typeRoots": ["../../node_modules/@types"],
    "types": ["jasmine", "node"],
    "baseUrl": "./"
  },
  "include": ["module.ts", "index.ts"],
  "exclude": [
    "/node_modules/"
  ],
  "angularCompilerOptions": {
    "genDir": "../../dist",
    "skipTemplateCodegen": true,    
    "strictMetadataEmit": true,
    "debug": true
  }
}
